generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  username  String   @unique
  hash      String
  salt      String
  settings  UserSettings?
  orders    OrderList?
  role      RoleVariant
}

model UserSettings {
  id        Int          @id @default(autoincrement())
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  ownerId   Int          @unique
  owner     User         @relation(fields: [ownerId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  theme     ThemeVariant
}

model OrderList {
  id        Int      @id @default(autoincrement())
  ownerId   Int      @unique
  owner     User     @relation(fields: [ownerId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  items     Order[]
}

model Order {
  id          Int       @id @default(autoincrement())
  orderListId Int
  orderList   OrderList @relation(fields: [orderListId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  color       String
  customer    String
  photoSet    String
  deadline    String[]
  comment     String?
  status      OrderStatusVariant
  details     OrderDetails[]
}

model OrderDetails {
  id          Int   @id @default(autoincrement())
  orderId     Int
  order       Order @relation(fields: [orderId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  count       String
  description String
  sum         String
}

enum ThemeVariant {
  Light
  Dark
}

enum OrderStatusVariant {
  InProgress
  Ready
  Done
}

enum RoleVariant {
  Admin
  User
  Guest
}